{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "lib": ["es2017"],
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": false,
        "declaration": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "examples",
        "test"
    ]
}